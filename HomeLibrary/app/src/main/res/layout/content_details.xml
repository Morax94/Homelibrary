<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="143dp"
        android:layout_height="187dp"
        android:layout_marginBottom="280dp"
        android:layout_marginEnd="250dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/ic_launcher"
        android:contentDescription="@string/contentDescription"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_editText_Details"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Title_editText_Details"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/example_title"
        app:layout_constraintBottom_toTopOf="@+id/author_textView_Details"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:theme="@android:style/TextAppearance.Holo.WindowTitle" />

    <TextView
        android:id="@+id/author_textView_Details"
        android:layout_width="52dp"
        android:layout_height="20dp"
        android:text="@string/details_autor"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintHorizontal_bias="0.176"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/author_editText_Details"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        tools:layout_editor_absoluteY="49dp" />

    <EditText
        android:id="@+id/date_editText_Details"
        android:layout_width="162dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="date"
        android:text="@string/example_date"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/page_textView_Details"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.43" />

    <EditText
        android:id="@+id/page_editText_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="numberDecimal"
        android:text="@string/example_page"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/description_editText_Details"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.449" />

    <EditText
        android:id="@+id/publisher_editText_Details"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="text"
        android:text="@string/example_publisher"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/date_textView_Details"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.8" />

    <EditText
        android:id="@+id/author_editText_Details"
        android:layout_width="169dp"
        android:layout_height="37dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="@string/example_author"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/publiser_textView_Details"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/date_textView_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_data"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/date_editText_Details"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.21" />

    <TextView
        android:id="@+id/publiser_textView_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_publisher"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/publisher_editText_Details"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.22" />

    <TextView
        android:id="@+id/page_textView_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detalis_page"
        android:layout_marginBottom="-11dp"
        app:layout_constraintBottom_toTopOf="@+id/page_editText_Details"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.187" />

    <TextView
        android:id="@+id/description_textView_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_description"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/description_editText_Details" />

    <EditText
        android:id="@+id/description_editText_Details"
        android:layout_width="348dp"
        android:layout_height="189dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:text="@string/example_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
